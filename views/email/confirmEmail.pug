extends baseEmail

block content
  p Hi #{firstName},
  p Welcome to Natours! We're glad to have you 🎉🙏
  p Please confirm your email address by clicking on the button below.
  table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
    tbody
      tr
        td(align='left')
          table(role='presentation', border='0', cellpadding='0', cellspacing='0')
            tbody
              tr
                td
                  a(href=`${url}`, target='_blank') Confirm your email
  p If you didn't create this account, please ignore this email!